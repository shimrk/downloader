{
    "name": "chrome-extension-downloader",
    "version": "1.0.0",
    "description": "Chrome拡張機能(TypeScript+webpack)開発用",
    "scripts": {
        "build": "webpack --mode production",
        "dev": "webpack --mode development --watch",
        "dev:webpack": "../scripts/dev-webpack-only.sh",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist",
        "test": "vitest --config vitest.config.ts",
        "test:ui": "vitest --ui --config vitest.config.ts",
        "test:run": "vitest run --config vitest.config.ts",
        "test:coverage": "vitest run --coverage --config vitest.config.ts"
    },
    "devDependencies": {
        "@types/chrome": "^0.0.260",
        "@types/jsdom": "^21.1.7",
        "@vitest/ui": "^1.6.1",
        "jsdom": "^23.2.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.4.0",
        "vitest": "^1.6.1",
        "webpack": "^5.90.0",
        "webpack-cli": "^5.1.4"
    }
}
